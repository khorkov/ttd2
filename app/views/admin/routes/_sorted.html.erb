<% if %w[increase decrease].include? type %>
  <% @route.stations_sorted_by(type).each do |station| %>
    <tr>
      <td><%= station.title %></td>
      <td><%= station.show_time_for('arrival') %></td>
      <td><%= station.show_time_for('departure') %></td>
      <td><%= form_tag set_index_admin_railway_station_path(station), method: :patch do %>
            <%= number_field_tag :position, station.show_index_on(@route)  %>
            <%= hidden_field_tag :route_id, @route.id %>
            <%= submit_tag 'Изменить' %>
          <% end %>
      </td>
    </tr>
  <% end %>
<% end %>
