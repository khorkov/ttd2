<h2><%= t('.title') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', placeholder: t('.placeholder.name') %>
  </div>

  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, class: 'form-control', placeholder: t('.placeholder.last_name') %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: t('.placeholder.email') %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: t('.placeholder.password') %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: t('.placeholder.password_confirmation') %>
  </div>

  <div class="actions">
    <%= f.submit t('.submit'), class: 'btn btn-success' %>
  </div>
<% end %>
