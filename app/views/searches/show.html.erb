<br />
<% if @search.start_station_id == @search.finish_station_id %>
  <%= 'Выберите разные станции'  %>
<% else %>

    <% @search.routes.each do |route| %>
      <strong>Маршрут: </strong><%= route.title %><br />

      <% route.trains.each do |train| %>
        <%= form_tag new_ticket_path, method: :get do %>
          <strong>поезд: </strong><%= train.number %>
          <%= hidden_field_tag :user_id, @search.user.id %>
          <%= hidden_field_tag :start_station_id, @search.start_station_id %>
          <%= hidden_field_tag :finish_station_id, @search.finish_station_id %>
          <%= hidden_field_tag :train_id, train.id %>
          <%= submit_tag 'Выбрать' %><br />
      <% end %>
    <% end %>
  <% end %>
<% end %>
