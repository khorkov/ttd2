<% @route.stations_sorted_by_increase.each do |station, index| %>
  <tr>
    <td><%= station.title %></td>
    <td><%= form_tag set_index_railway_station_path(station), method: :patch do %>
          <%= number_field_tag :position, station.show_index_on(@route)  %>
          <%= hidden_field_tag :route_id, @route.id %>
          <%= submit_tag 'Изменить' %>
        <% end %>
    </td>
  </tr>
<% end %>
